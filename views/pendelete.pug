block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let id = toShow.id
    - let type  = toShow.type 
    - let ink_color = toShow.ink_color
    - let cost = toShow.cost 
    - let actionid = "/resource/pens/" + id 
    script let actionid = "#{actionid}" 
    div 
    div.row 
      div(class='penAttr mr-3')  ID is: 
      div #{id} 
    div.row 
      div(class='penAttr mr-3') Type is: 
      div #{type} 
    div.row 
      div(class='penAttr mr-3') ink_color is: 
      div #{ink_color} 
    div.row 
      div(class='penAttr mr-3') Cost  is: 
      div #{cost} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/ball' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/ball' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    }